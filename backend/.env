# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB - Replace with your MongoDB Atlas URI for production
MONGODB_URI=mongodb+srv://your_username:your_password@cluster0.mongodb.net/grievance-portal?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRE=7d

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com

# File Storage Configuration
UPLOAD_PATH=./uploads

# Email Configuration - GNDEC Webmail
SMTP_HOST=smtp.gndec.ac.in
SMTP_PORT=587
SMTP_SECURE=false
WEBMAIL_USER=your_webmail_username@gndec.ac.in
WEBMAIL_PASSWORD=your_webmail_password

# Frontend URL for email links
FRONTEND_URL=https://your-frontend-domain.com

# Note: For local development, use:
# CORS_ORIGIN=http://localhost:3000
# FRONTEND_URL=http://localhost:3000
# MONGODB_URI=mongodb://localhost:27017/grievance-portal 